@model AluguelWeb.Models.Entidades.Editora

@{
    ViewData["Title"] = "CadastroEditora";
}

<h2>CadastroEditora</h2>

<h4>Editora</h4>
<hr />
@using (Html.BeginForm("CadastrarEditora", "Editora", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CadastroEditora">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cnpj" class="control-label"></label>
                    <input id="cnpj" asp-for="Cnpj" class="form-control" />
                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}

<div>
    <a asp-action="Editora">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
    <script>
        $(document).ready(function () {
            var $CampoCnpj = $("#cnpj");
            $CampoCnpj.mask('00.000.000/0000-00', { reverse: true });
        });
    </script>
}
