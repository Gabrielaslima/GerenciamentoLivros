@model AluguelWeb.Models.Entidades.Livro

@{
    ViewData["Title"] = "CadastroLivro";
}

<h2>Cadastro de Livro</h2>

<hr />
@using (Html.BeginForm("CadastrarLivro", "Livro", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CadastroLivro">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AutorID" class="control-label">Codigo Autor</label>
                    <input asp-for="AutorID" class="form-control" />
                    <span asp-validation-for="AutorID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EditoraID" class="control-label">Codigo Editora</label>
                    <input asp-for="EditoraID" class="form-control" />
                    <span asp-validation-for="EditoraID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}
<div>
    <a asp-action="Livro">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
